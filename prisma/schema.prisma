generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//prisma schema
//schema 업데이트시 항상 migrate를 해주어야 한다.
model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String?
  username  String   @unique
  email     String   @unique
  password  String
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
}